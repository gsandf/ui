{
  "name": "@gsandf/ui",
  "version": "0.4.0-beta.1",
  "description": "âš¡ A simple set of UI development helpers for React projects",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/ui-esm-js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "author": "GS&F Devs <dev@gsandf.com> (https://gsandf.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gsandf/ui/issues"
  },
  "homepage": "https://github.com/gsandf/ui",
  "keywords": [
    "accessible",
    "components",
    "design-system",
    "react-components",
    "react",
    "ui",
    "uikit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gsandf/ui.git"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "ignoredByWatcher": [
      "!src/**"
    ],
    "require": [
      "./.ava-entry.js"
    ]
  },
  "dependencies": {
    "@blakek/array-split": "^2.0.1",
    "@blakek/deep": "^2.2.0",
    "polished": "^4.1.4"
  },
  "devDependencies": {
    "@blakek/range": "^1.0.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@storybook/addon-actions": "6.3.4",
    "@storybook/addon-essentials": "6.3.4",
    "@storybook/addon-links": "6.3.4",
    "@storybook/react": "6.3.4",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.14",
    "@types/styled-components": "^5.1.10",
    "amper-scripts": "^1.2.0",
    "ava": "^3.15.0",
    "babel-plugin-styled-components": "^1.13.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "styled-components": "^5.3.0",
    "ts-node": "^10.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "styled-components": "^5.3.0"
  },
  "scripts": {
    "build": "run-s build:clean build:compile",
    "build:clean": "rimraf dist",
    "build:compile": "tsdx build",
    "build-storybook": "build-storybook",
    "dev": "yarn storybook",
    "format-check": "amper-scripts format-check .",
    "format": "amper-scripts format-write .",
    "lint": "amper-scripts lint .",
    "prepack": "yarn build",
    "size": "size-limit",
    "storybook": "start-storybook -p 6006",
    "test": "ava",
    "type-check": "tsc --noEmit",
    "validate": "run-p format-check lint test type-check",
    "watch": "tsdx watch"
  }
